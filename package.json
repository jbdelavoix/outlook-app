{
  "name": "outlook-app",
  "productName": "Outlook",
  "version": "1.0.4",
  "description": "A desktop application for Outlook",
  "author": "jbdelavoix <jbdelavoix@users.noreply.github.com> (https://github.com/jbdelavoix)",
  "homepage": "https://github.com/jbdelavoix/outlook-app",
  "license": "MIT",
  "main": "src/app.js",
  "scripts": {
    "test": "echo 'no tests implemented'",
    "dist": "electron-builder --macos --linux --windows --publish never"
  },
  "devDependencies": {
    "electron": "^21.2.0",
    "electron-builder": "^23.6.0"
  },
  "build": {
    "artifactName": "${name}-${version}-${os}.${ext}",
    "files": [
      "**/*",
      "build/**/*"
    ],
    "appId": "jbdelavoix.outlook-app",
    "mac": {
      "category": "public.app-category.productivity",
      "darkModeSupport": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "pacman",
        "snap",
        "tar.bz2"
      ],
      "category": "Network;Office"
    },
    "win": {
      "verifyUpdateCodeSignature": false,
      "target": [
        "nsis",
        "zip"
      ]
    }
  }
}
